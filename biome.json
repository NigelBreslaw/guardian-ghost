{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 120,
    "ignore": ["dist/**", "ios/**", "android/**", "node_modules/**", ".expo/**", "app.json", "eas.json"]
  },
  "linter": {
    "enabled": true,
    "ignore": ["./babel.config.js", "minifier/index.ts"],
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off"
      },
      "correctness": {
        "noUnusedImports": "error"
      }
    }
  }
}
